@page "/Plants"
@model GrowMate.Presentation.Pages.Plants.IndexModel
@{
    ViewData["Title"] = "Мои посадки";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">
                <i class="bi bi-flower1"></i> Мои посадки
            </h1>
        </div>
        <div class="col-auto">
            <a asp-page="/Plants/Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Добавить посадку
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Plants.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-flower1 text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">У вас пока нет посадок</h4>
                <p class="text-muted">Начните добавлять растения в свой сад!</p>
                <a asp-page="/Plants/Create" class="btn btn-success mt-2">
                    <i class="bi bi-plus-circle"></i> Добавить первую посадку
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var plant in Model.Plants)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                @if (plant.IsUnique)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-collection"></i>
                                }
                                @plant.Name
                            </h5>
                            <span class="badge bg-light text-dark">@plant.Type.ToString()</span>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrWhiteSpace(plant.ImagePath))
                            {
                                <img src="@plant.ImagePath" alt="Фото @plant.Name" class="img-fluid rounded mb-3 border" style="width: 100%; height: 200px; object-fit: cover;" />
                            }

                            @if (!string.IsNullOrEmpty(plant.Variety))
                            {
                                <p class="mb-2">
                                    <strong>Сорт:</strong> <span class="text-muted">@plant.Variety</span>
                                </p>
                            }
                            
                            <p class="mb-2">
                                <strong>Количество:</strong> 
                                @if (plant.IsUnique)
                                {
                                    <span class="badge bg-warning text-dark">Уникальное</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@plant.Quantity шт.</span>
                                }
                            </p>

                            <p class="mb-2">
                                <strong>Грядка:</strong> <span class="text-muted">@plant.GardenBedName</span>
                            </p>

                            <p class="mb-2">
                                <strong>Дата посадки:</strong> <span class="text-muted">@plant.PlantingDate.ToString("dd.MM.yyyy")</span>
                            </p>

                            <p class="mb-2">
                                <strong>Дней от посадки:</strong> <span class="badge bg-secondary">@plant.DaysFromPlanting дн.</span>
                            </p>

                            @if (!string.IsNullOrEmpty(plant.Description))
                            {
                                <p class="mb-2">
                                    <strong>Описание:</strong><br/>
                                    <small class="text-muted">@plant.Description</small>
                                </p>
                            }

                            @if (plant.TemplateName != null)
                            {
                                <p class="mb-0">
                                    <small><i class="bi bi-bookmark-fill text-primary"></i> По шаблону: @plant.TemplateName</small>
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <div class="btn-group w-100" role="group">
                                <a asp-page="/Plants/Details" asp-route-id="@plant.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i> Детали
                                </a>
                                <a asp-page="/Plants/Edit" asp-route-id="@plant.Id" class="btn btn-outline-warning">
                                    <i class="bi bi-pencil">Изменить</i>
                                </a>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@plant.Id" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger" 
                                            onclick="return confirm('Вы уверены, что хотите удалить эту посадку?')">
                                        <i class="bi bi-trash">Удалить</i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

