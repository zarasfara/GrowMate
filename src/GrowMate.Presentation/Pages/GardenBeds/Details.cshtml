@page "{id:int}"
@using GrowMate.Domain.GardenBeds
@model DetailsModel
@{
    ViewData["Title"] = Model.GardenBed?.Name ?? "Детали грядки";
}

<div class="container mt-4">
    @if (Model.GardenBed != null)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-light">
                        <h1 class="h3 mb-0">
                            <span>
                                @switch (Model.GardenBed.Type)
                                {
                                    case GardenBedType.OpenGround:
                                        <span>🌾</span>
                                        break;
                                    case GardenBedType.Greenhouse:
                                        <span>🏠</span>
                                        break;
                                    case GardenBedType.Container:
                                        <span>🪴</span>
                                        break;
                                    default:
                                        <span>📦</span>
                                        break;
                                }
                            </span>
                            @Model.GardenBed.Name
                        </h1>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <h5>Информация о грядке</h5>
                                <dl class="row">
                                    <dt class="col-sm-6">Тип:</dt>
                                    <dd class="col-sm-6">
                                        <span
                                            class="badge bg-primary">@GetGardenBedTypeName(Model.GardenBed.Type)</span>
                                    </dd>
                                    <dt class="col-sm-6">Растений:</dt>
                                    <dd class="col-sm-6">
                                        <span class="badge bg-success">@Model.GardenBed.PlantCount</span>
                                    </dd>
                                    <dt class="col-sm-6">Создана:</dt>
                                    <dd class="col-sm-6">@Model.GardenBed.CreatedAt.ToString("dd.MM.yyyy")</dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <a asp-page="Edit" asp-route-id="@Model.GardenBed.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Изменить
                        </a>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться
                        </a>
                    </div>
                </div>

                <!-- Plants Section -->
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">🪴 Растения на грядке</h5>
                        <a asp-page="/Plants/Create" asp-route-gardenBedId="@Model.GardenBed.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-plus-circle"></i> Добавить посадку
                        </a>
                    </div>
                    <div class="card-body">
                        @if (Model.Plants.Any())
                        {
                            <div class="list-group">
                                @foreach (var plant in Model.Plants)
                                {
                                    <a asp-page="/Plants/Details" asp-route-id="@plant.Id" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-1">
                                                    @if (plant.IsUnique)
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-collection text-info"></i>
                                                    }
                                                    <strong>@plant.Name</strong>
                                                    @if (!string.IsNullOrEmpty(plant.Variety))
                                                    {
                                                        <small class="text-muted">(@plant.Variety)</small>
                                                    }
                                                </h6>
                                                <p class="mb-1">
                                                    <small>
                                                        <span class="badge bg-secondary">@plant.Type.ToString()</span>
                                                        @if (plant.IsUnique)
                                                        {
                                                            <span class="badge bg-warning text-dark">Уникальное</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-info">@plant.Quantity шт.</span>
                                                        }
                                                        <span class="badge bg-light text-dark">@plant.DaysFromPlanting дн. от посадки</span>
                                                    </small>
                                                </p>
                                            </div>
                                            <div>
                                                <i class="bi bi-chevron-right"></i>
                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                <i class="bi bi-info-circle"></i> На этой грядке еще нет растений.
                                <a asp-page="/Plants/Create" asp-route-gardenBedId="@Model.GardenBed.Id" class="alert-link">Добавить первую посадку</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
        </div>
    }
</div>

@{
    string GetGardenBedTypeName(GardenBedType type)
    {
        return type switch
        {
            GardenBedType.OpenGround => "Открытый грунт",
            GardenBedType.Greenhouse => "Теплица",
            GardenBedType.Container => "Контейнер",
            GardenBedType.Other => "Другое",
            _ => "Неизвестно"
        };
    }
}

